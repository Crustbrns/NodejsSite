<div class="auth-stretched">
    <div class="auth-container">
        <div class="auth-section">
            <div class="auth-holder">
                <div class="auth-title">
                    Create your account
                </div>
                <div class="auth-subtitle">
                    Please enter your email, login and password
                </div>

                <form action="/auth/register" method="POST">

                    <div class="auth-fields">
                        <div>
                            <input class="auth-field" type="email" placeholder="Mail" name="email" required>
                        </div>

                        <div style="margin-top: 10px">
                            <input class="auth-field" type="text" placeholder="Login" name="login" required>
                        </div>

                        <div style="margin-top: 10px">
                            <input class="auth-field" type="password" placeholder="Password" name="password" required>
                        </div>

                        <div style="margin-top: 10px">
                            <input class="auth-field" type="password" placeholder="Confirm Password"
                                name="confirmpassword" required>
                        </div>

                        <div>
                            <button class="enter-button-field">Sign Up</button>
                        </div>

                        <div class="auth-subtitle auth-create-request">
                            Already have an account? <a href="/login">Login into your account</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>