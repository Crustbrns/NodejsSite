
<form action="/admin/createproduct" method="POST">

    <div class="auth-stretched">
        <div class="auth-container">
            <div class="auth-section" style="width: 480px">
                <div class="auth-holder" style="padding: 0 40px 40px 40px">
                    <h2 style="padding-top: 40px">Product Create</h2>
                    <div class="input-field" style="margin: auto; padding-top: 20px; padding-right: 40px">
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="text" name="Title" placeholder="Product title" required>
                        </div>
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="number" min="1" max="5000" name="Price"
                                placeholder="Product price" required>
                        </div>
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="text" name="ImageUrl" placeholder="Product image" required>
                        </div>
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="text" name="Description" placeholder="Product description">
                        </div>
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="text" name="Type" placeholder="Product type" required>
                        </div>
                        <div>
                            <input style="width: 400px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; resize: vertical;" type="text" name="Genetics" placeholder="Product genetics" required>
                        </div>
                        <div style="margin-top: 20px">
                            <input type="checkbox" name="IsHit" >
                            <span>Is Product Hit?</span>
                        </div>
                        <div>
                            <input type="checkbox" name="IsInStock" checked>
                            <span>Is Product in Stock?</span>
                        </div>

                        <button type="submit" class="btn" style="margin-top: 20px">Create Product</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>